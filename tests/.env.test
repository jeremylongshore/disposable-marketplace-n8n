# Test Environment Configuration
# Environment variables for N8N workflow testing

# Test Environment Settings
TEST_DEBUG=false
TEST_TIMEOUT=30000
MOCK_SERVER_PORT=3001

# N8N Configuration
N8N_URL=http://localhost:5678
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# CI Environment Detection
CI=${CI:-false}
GITHUB_ACTIONS=${GITHUB_ACTIONS:-false}

# Test Data Configuration
TEST_CSV_URL=https://httpbin.org/response-headers?content-type=text/csv
INVALID_CSV_URL=https://httpbin.org/status/404
MALFORMED_CSV_URL=https://httpbin.org/status/500

# Performance Test Settings
PERFORMANCE_TEST_ITERATIONS=100
LARGE_FILE_NODE_COUNT=1000
CONCURRENT_REQUEST_COUNT=5

# Security Test Settings
SECURITY_SCAN_TIMEOUT=60
VULNERABILITY_THRESHOLD=high

# Coverage Settings
COVERAGE_THRESHOLD_LINES=80
COVERAGE_THRESHOLD_FUNCTIONS=80
COVERAGE_THRESHOLD_BRANCHES=75

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=2000

# Mock Data Settings
MOCK_RESELLER_COUNT=10
MOCK_OFFER_COUNT=5
MOCK_REQUEST_ID_PREFIX=test_

# Test File Paths
TEST_WORKFLOW_FILE=workflow.json
TEST_CSV_FILE=tests/fixtures/valid-resellers.csv
TEST_INVALID_CSV_FILE=tests/fixtures/invalid-resellers.csv

# Logging Configuration
LOG_LEVEL=warn
ENABLE_TEST_LOGGING=false

# Browser Testing (for E2E if needed)
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30000

# Database Configuration (if needed for advanced E2E)
TEST_DB_URL=sqlite::memory:
TEST_DB_LOGGING=false