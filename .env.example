# N8N Configuration
N8N_BASE_URL=https://your-n8n-instance.com
N8N_WEBHOOK_PATH=/webhook/disposable-marketplace

# Google Sheets Integration
GOOGLE_SHEETS_ID=your_google_sheets_id_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Workflow Configuration
MAX_RESELLERS=500
DEFAULT_TIMEOUT_MINUTES=60
BATCH_SIZE=25
REQUEST_TIMEOUT_SECONDS=30

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Webhook Security (Optional)
WEBHOOK_SECRET=your-webhook-secret-key
ALLOWED_ORIGINS=https://your-domain.com,https://another-domain.com

# Scoring Algorithm Weights
PRICE_WEIGHT=1.0
TRUST_WEIGHT=0.1
TIME_PENALTY_WEIGHT=0.01
TERMS_BONUS_WEIGHT=0.05

# CSV Validation
MAX_CSV_SIZE_MB=10
REQUIRED_CSV_COLUMNS=id,name,email,region,trust_score

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics

# Development/Testing
DEV_MODE=false
TEST_CSV_URL=https://raw.githubusercontent.com/your-repo/disposable-marketplace-n8n/main/example-resellers.csv

# Security Headers
CORS_ENABLED=true
RATE_LIMITING_ENABLED=true
SSL_REDIRECT=true

# Backup & Recovery
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7